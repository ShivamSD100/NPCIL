@model IEnumerable<NPCIL.Models.MenuModel>
@{
    ViewData["Title"] = "View Menu";
}

<link href="~/datatables/css/buttons.datatables.css" rel="stylesheet" />
<link href="~/datatables/css/datatables.datatables.css" rel="stylesheet" />


<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-6">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="../dashboard/index.html">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0)">View Menu</a></li>
                    @* <li class="breadcrumb-item" aria-current="page">Form Validation</li> *@
                </ul>
                <div class="page-header-title">
                    <h2 class="mb-0">View Menu</h2>
                </div>
            </div>
            <div class="col-md-6 text-end">
                 @Html.ActionLink("Add Menu", "CMSMenuAdd", "Menu", new { id = ViewData["ParentId"]}) 
                @*  <a href="~/Menu/CMSMenuAdd" class="btn btn-primary">Add Menu</a> *@ 
            </div>
        </div>
    </div>
</div>


<div class="row">

    <!-- [ basic-table ] start -->
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header">
                <h5>View Menu</h5>

            </div>
            <div class="card-body table-border-style">
                <button class="btn btn-light-primary mb-1 btn-sm csv">Export CSV</button>
                <button class="btn btn-light-primary mb-1 btn-sm sql">Export SQL</button>
                <button class="btn btn-light-primary mb-1 btn-sm txt">Export TXT</button>
                <button class="btn btn-light-primary mb-1 btn-sm json">Export JSON</button>
                <div class="table-responsive">

                    <table id="example1" class="display nowrap table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Main Menu</th>
                                <th>Parent Menu</th>
                                <th>Menu Position</th>
                                <th>Menu Type</th>
                                @* <th>Thumbnail</th> *@
                                <th>Sub Menu</th>

                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var man in Model)
                            {
                                <tr>
                                    <td>@man.MenuId</td>
                                    @*  <td>@man.MenuName_eng</td> *@
                                    <td>@Html.ActionLink(@man.MenuName_eng, "AddContent", "ContentManager", new { id = @man.MenuId })</td>
                                    <td>
                                        <select asp-for="@man.MenuListId"
                                                class="form-control"
                                                asp-items="@(new SelectList(@ViewBag.ListofMenu,"MenuListId", "MenuList_Name"))">
                                        </select>
                                    </td>
                                    <td>@man.MenuPosition_Name</td>
                                    <td>@man.MenuType_Name</td>
                                    @* <td><img src="@man.ImagePath" width="150" alt="Image Not Available" /></td> *@
                                    @* <td><a align="center" href=""><svg fill="none" height="30" viewBox="0 0 30 30" width="30" alignment-baseline="central" xmlns="http://www.w3.org/2000/svg"><path d="M12 7C12.4142 7 12.75 7.33579 12.75 7.75V11.25H16.25C16.6642 11.25 17 11.5858 17 12C17 12.4142 16.6642 12.75 16.25 12.75H12.75V16.25C12.75 16.6642 12.4142 17 12 17C11.5858 17 11.25 16.6642 11.25 16.25V12.75H7.75C7.33579 12.75 7 12.4142 7 12C7 11.5858 7.33579 11.25 7.75 11.25H11.25V7.75C11.25 7.33579 11.5858 7 12 7Z" fill="#212121" /><path d="M3 6.25C3 4.45507 4.45507 3 6.25 3H17.75C19.5449 3 21 4.45507 21 6.25V17.75C21 19.5449 19.5449 21 17.75 21H6.25C4.45507 21 3 19.5449 3 17.75V6.25ZM6.25 4.5C5.2835 4.5 4.5 5.2835 4.5 6.25V17.75C4.5 18.7165 5.2835 19.5 6.25 19.5H17.75C18.7165 19.5 19.5 18.7165 19.5 17.75V6.25C19.5 5.2835 18.7165 4.5 17.75 4.5H6.25Z" fill="#87CEEB" /></svg></a></td> *@
                                    <td>@Html.ActionLink("Add Sub", "MenusList", "Menu", new { id = @man.MenuId })</td>
                                    <td>@Html.ActionLink("Edit", "EditMenu", new { id = @man.MenuId })</td>
                                    @* <td>@Html.ActionLink("Edit", "AddControlManager","ContentManager")</td> *@

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-body table-border-style" id="div_submenu" style="display:none">
                <button class="btn btn-light-primary mb-1 btn-sm csv">Export CSV</button>
                <button class="btn btn-light-primary mb-1 btn-sm sql">Export SQL</button>
                <button class="btn btn-light-primary mb-1 btn-sm txt">Export TXT</button>
                <button class="btn btn-light-primary mb-1 btn-sm json">Export JSON</button>
                <div class="table-responsive">

                    <table id="example1" class="display nowrap table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Main Menu</th>
                                <th>Parent Menu</th>
                                <th>Menu Position</th>
                                <th>Menu Type</th>
                                @* <th>Thumbnail</th> *@
                                <th>Sub Menu</th>

                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var man in Model)
                            {
                                <tr>
                                    <td>@man.MenuId</td>
                                    @*  <td>@man.MenuName_eng</td> *@
                                    <td>@Html.ActionLink(@man.MenuName_eng, "AddContent", "ContentManager", new { id = @man.MenuId })</td>
                                    <td>
                                        <select asp-for="@man.MenuListId"
                                                class="form-control"
                                                asp-items="@(new SelectList(@ViewBag.ListofMenu,"MenuListId", "MenuList_Name"))">
                                        </select>
                                    </td>
                                    <td>@man.MenuPosition_Name</td>
                                    <td>@man.MenuType_Name</td>
                                    @* <td><img src="@man.ImagePath" width="150" alt="Image Not Available" /></td> *@
                                    @* <td><a align="center" href=""><svg fill="none" height="30" viewBox="0 0 30 30" width="30" alignment-baseline="central" xmlns="http://www.w3.org/2000/svg"><path d="M12 7C12.4142 7 12.75 7.33579 12.75 7.75V11.25H16.25C16.6642 11.25 17 11.5858 17 12C17 12.4142 16.6642 12.75 16.25 12.75H12.75V16.25C12.75 16.6642 12.4142 17 12 17C11.5858 17 11.25 16.6642 11.25 16.25V12.75H7.75C7.33579 12.75 7 12.4142 7 12C7 11.5858 7.33579 11.25 7.75 11.25H11.25V7.75C11.25 7.33579 11.5858 7 12 7Z" fill="#212121" /><path d="M3 6.25C3 4.45507 4.45507 3 6.25 3H17.75C19.5449 3 21 4.45507 21 6.25V17.75C21 19.5449 19.5449 21 17.75 21H6.25C4.45507 21 3 19.5449 3 17.75V6.25ZM6.25 4.5C5.2835 4.5 4.5 5.2835 4.5 6.25V17.75C4.5 18.7165 5.2835 19.5 6.25 19.5H17.75C18.7165 19.5 19.5 18.7165 19.5 17.75V6.25C19.5 5.2835 18.7165 4.5 17.75 4.5H6.25Z" fill="#87CEEB" /></svg></a></td> *@
                                    <td>@Html.ActionLink("Add Sub", "MenusList", "Menu", new { id = @man.MenuId })</td>
                                    <td>@Html.ActionLink("Edit", "EditMenu", new { id = @man.MenuId })</td>
                                    @* <td>@Html.ActionLink("Edit", "AddControlManager","ContentManager")</td> *@

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- [ basic-table ] end -->
</div>
<!-- [ Main Content ] end -->



